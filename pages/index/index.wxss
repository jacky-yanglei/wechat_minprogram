/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.swiper {
  margin-bottom: 10px;
}
.card {
  margin: 0 10px 10px;
  border: 1px solid #eee;
}
.card .title, .card .dec, .card .price {
  padding: 0 10px;
}
.card .price {
  text-align: right;
}
.card .price>text:last-child {
  font-size: 12px;
}
.card .title {
  font-weight: bold;
  margin-top: 5px;
  margin-bottom: 10px;
}
.card .dec {
  font-size: 14px;
  margin-bottom: 10px;
}
.tab-page {
  display: none;
}
.tab-page.show {
  display: block;
}
.mine .userinfo {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 40vh;
  text-align: center;
}
.mine .userinfo image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-bottom: 10px;
}
.i-btn-hover {
  background-color: black;
}
.balance-block {
  position: fixed;
  width: 100%;
  height: 40px;
  bottom: 50px;
  border-top: 1px solid rgba(0, 0, 0, 0.05);
}
.balance-block>view:first-child {
  width: 100%;
  height: 100%;
  line-height: 40px;
  font-size: 14px;
  padding: 0 40px 0 10px;
}
.balance-block>view:first-child text{
  padding-left: 10px;
  padding-right: 10px;
  color: red;
}
.balance-block>view:last-child {
  position: absolute;
  height: 30px;
  top: 5px;
  right: 5px;
  background-color: red;
  border: 1px solid rgba(0, 0, 0, 0.05);
  border-radius: 3px;
  padding: 0 10px;
  color: white;
}
.cart-list:first-child {
  border-top: 1px solid #ddd;
}
.cart-list {
  height: 80px;
  display: flex;
  border-bottom: 1px solid #ddd;
  padding-bottom: 5px;
  padding-top: 5px;
  box-sizing: content-box;
}
.cart-list > view:first-child {
  width: 40%;
}
.cart-list > view:nth-child(2) {
  width: 60%;
  text-align: right;
  padding-right: 10px;
  font-size: 14px;
  display: inline-flex;
  align-items: center;
}
.cart-list > view:nth-child(2) > view > view:first-child {
  font-size: 20px;
}
.cart-list > view:nth-child(2) > view {
  width: 100%;
}